            </ul>
            <a href="/Khadidiatou Ba-1.pdf" class="btn" id="downloadCvBtn" download style="display:none;">Téléchargez le CV</a>
            <label id="icon">
                <i class="fas fa-bars"></i>
            </label>
        </nav>
    </div>
    <h1>Formulaire de Contact</h1>
    <form id="contactForm" action="/submit-form" method="post">
        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="nom" required><br>

        <label for="prenom">Prénom :</label>
        <input type="text" id="prenom" name="prenom" required><br>

        <label for="adresse">Adresse :</label>
        <input type="text" id="adresse" name="adresse" required><br>

        <label for="email">E-mail :</label>
        <input type="email" id="email" name="email" required><br>

        <label for="telephone">Téléphone :</label>
        <input type="tel" id="telephone" name="telephone" required><br>

        <button type="submit">Envoyer</button>
    </form>

    <script>
        document.getElementById("contactForm").addEventListener("submit", function(event) {
            var nom = document.getElementById("nom").value;
            var prenom = document.getElementById("prenom").value;
            var adresse = document.getElementById("adresse").value;
            var email = document.getElementById("email").value;
            var telephone = document.getElementById("telephone").value;

            if (nom === "" || prenom === "" || adresse === "" || email === "" || telephone === "") {
                alert("Veuillez remplir tous les champs.");
                event.preventDefault();
            } else if (!isValidEmail(email)) {
                alert("Veuillez entrer une adresse e-mail valide (@gmail.com uniquement).");
                event.preventDefault();
            } else {
                // Formulaire valide, afficher un message de succès
                alert("Votre formulaire a été soumis avec succès ! Le CV sera téléchargé automatiquement.");
                document.getElementById("downloadCvBtn").click(); // Déclenche le téléchargement du CV
            }
        });

        function isValidEmail(email) {
            var emailRegex = /^[^\s@]+@gmail\.com$/i;
            return emailRegex.test(email);
        }
    </script>
</body>
